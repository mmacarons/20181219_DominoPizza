<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="피자"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사이드디시"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="특가/이벤트"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내맘대로 피자"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="12sp"
        android:text="2018 프리미엄 브랜드 지수 피자전문점 부분 3년 연속 1위 수상"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#f2f2f2">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="주문하기"/>

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#f2f2f2">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="도미챗"/>

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#f2f2f2">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="퀵오더"/>

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#f2f2f2">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="특가/이벤트"/>

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#f2f2f2">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="선물하기"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#f2f2f2">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="내맘대로피자"/>

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#f2f2f2">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="단체주문"/>

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#f2f2f2">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="매장직원채용"/>

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#f2f2f2">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="오픈서베이"/>

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#f2f2f2">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textScaleX="0.9"
                android:text="한국도미노피자"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <LinearLayout
        android:layout_margin="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#f2f2f2">

        <TextView
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="감사한 마음을 도미노피자 상품권으로 따뜻하게 전하세요!"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>




</LinearLayout>