<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/logoImgView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="10sp"
                    android:text="NEW"
                    android:background="#E51937"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="10sp"
                    android:text="주문시 사이드디시 반값"
                    android:background="#207BD1"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

            <TextView
                android:id="@+id/nameTxt"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="블랙앵거스 스테이크"/>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:background="#F06418"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:text="L"/>

                <TextView
                    android:id="@+id/largePriceTxt"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="36,900"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="원"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:background="#F7A11A"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:text="M"/>

                <TextView
                    android:id="@+id/mediumPriceTxt"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="31,000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="원"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:text="상세보기"
                    android:textStyle="bold"
                    android:background="#435861"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:layout_width="3dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:text="바로주문"
                    android:textStyle="bold"
                    android:background="#009AE0"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>